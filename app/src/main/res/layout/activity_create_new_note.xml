<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateNewNoteActivity">

    <EditText
        android:id="@+id/NewNoteTitle"
        android:layout_width="337dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:hint="Enter your note title heer"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/NewNotetext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Enter your note  subject"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/NewNoteTitle"
        app:layout_constraintStart_toStartOf="@+id/NewNoteTitle"
        app:layout_constraintTop_toBottomOf="@+id/NewNoteTitle" />

    <EditText
        android:id="@+id/NewNoteBody"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Enter your note body"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/NewNotetext"
        app:layout_constraintStart_toStartOf="@+id/NewNotetext"
        app:layout_constraintTop_toBottomOf="@+id/NewNotetext" />

</android.support.constraint.ConstraintLayout>